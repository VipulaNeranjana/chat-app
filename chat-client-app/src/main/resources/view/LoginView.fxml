<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.vipula.dep10.client.controller.LoginViewController">
   <children>
      <VBox alignment="CENTER" layoutX="78.0" layoutY="80.0" prefHeight="240.0" prefWidth="444.0" spacing="10.0" style="-fx-border-color: blue; -fx-border-width: 2; -fx-border-radius: 20;">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="24.0" prefWidth="444.0">
               <children>
                  <Label minWidth="100.0" style="-fx-text-fill: blue;" text="UserName : ">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtName" maxWidth="1.7976931348623157E308" promptText="type your user name" style="-fx-background-radius: 20;" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="24.0" prefWidth="444.0">
               <children>
                  <Label minWidth="100.0" style="-fx-text-fill: blue;" text="password  :">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtPassword" maxWidth="1.7976931348623157E308" promptText="type password" style="-fx-background-radius: 20;" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Button fx:id="btnLogin" minWidth="100.0" mnemonicParsing="false" onAction="#btnLoginOnAction" style="-fx-background-color: green; -fx-background-radius: 20;" text="Login" textFill="WHITE" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </VBox>
      <Label fx:id="lblID" alignment="CENTER" contentDisplay="CENTER" layoutX="140.0" layoutY="37.0" prefHeight="16.0" prefWidth="320.0" textFill="#fa1c05" AnchorPane.leftAnchor="140.0" AnchorPane.rightAnchor="140.0">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Button fx:id="btnSignIn" layoutX="410.0" layoutY="339.0" minWidth="100.0" mnemonicParsing="false" onAction="#btnSignInOnAction" style="-fx-background-color: darkblue; -fx-background-radius: 20;" text="Sign In" textFill="WHITE" />
   </children>
</AnchorPane>
